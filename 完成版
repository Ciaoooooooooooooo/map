int move_updown(int cur_r, int cur_c, char c) //傳入(目前所在位置，輸入的上下移動指令) 
{
    switch (c) 
    {
    case 'w': case 'W': // 向上
        
            if (walk[cur_r-1][cur_c]&&cur_r-1>=0) {
                
                return (cur_r-1);
            }
        
        break;
    case 's': case 'S': // 向下
       
            if (walk[cur_r+1][cur_c]&&cur_r+1<5) {
                
                return (cur_r+1);
            }
        
        break;
    }
    
 return cur_r;
}

int move_rightleft(int cur_r, int cur_c, char c) //傳入(目前所在位置，輸入的左右移動指令) 
{
    switch (c) 
    {
    case 'a': case 'A': // 向左
     
            if (walk[cur_r][cur_c-1]&&cur_c-1>=0) {
                return (cur_c-1);
            }
        
        break;
    case 'd': case 'D': // 向右
       
            if (walk[cur_r][cur_c+1]&&cur_c+1<10) {
                return (cur_c+1);
            }
        
        break;
    }
     return cur_c;
}

void library_map(int cur_r, int cur_c)//傳入起始位置 
{
    do {
       cout << "\033[2J\033[1;1H";
       cout << "\n使用W/A/S/D控制方向"<<endl;
			cout << "有" << "\033[33m" << "黃色標記"<< "\033[0m" << "的位置似乎放了些神奇的東西，可以去看看"<<endl; 
			cout << "有" << "\033[31m" << "紅色標記"<< "\033[0m" << "的地方似乎就是出口了" <<endl;
			cout << "小心不要撞到書架呦！"<<endl;
			cout << "\n\n\n";
        
        for (int i = 0; i < 5; ++i) {
            for (int j = 0; j < 10; ++j) {
                if (cur_r == i && cur_c == j) 
				{ 
                    cout << "\033[46;37m" << library[i][j] << "\033[0m" <<" ";
                } 
                else if ((i == 0 && j == 1)||(i == 0 && j == 4)||(i == 0 && j == 9)|| (i == 1 && j == 0) ||(i == 2 && j == 3)  
				||(i == 2 && j == 6)||(i == 3 && j == 8)||(i == 4 && j == 0) ||(i == 4 && j == 5)  ) 
				{ 
                    cout << "\033[33m" << library[i][j] << "\033[0m" << " ";
                } 
                else if (i == 1 && j == 9) 
				{ 
                    cout << "\033[31m" << library[i][j] << "\033[0m" << " ";
                } 

                else cout<<library[i][j] << " ";
                
            }
            cout << endl;  
        } 
        
	if(cur_r == 1 && cur_c == 9 )//終 
	{
		cout << "\n";
		slowPrint("你印象中本該是出口的地方，卻只是一排與周圍毫無二致的巨大書櫃。",3);
		slowPrint("……這樣看來，離開的希望大概是零了吧。",1);
		slowPrint("無奈之下，你隨手翻起書架上的書，沒想到竟發現了一本相當奇怪的東西——",3);
		cout << endl;
		slowPrint("《心理測驗☆ 快來看看你跟起司的羈絆吧～？》",2);
		cout << endl;
		slowPrint("……什麼鬼？這東西看起來比 FB 垃圾廣告還蠢。",1);
		slowPrint("但現在也沒別的事可做，於是你帶著半信半疑的心情，開始讀起書中的內容。",3);
		break;
	}
        
	story(cur_r, cur_c);

    char move;
    cin >> move;
    
    if (move == 'W' || move == 'w' || move == 'S' || move == 's') {
           cur_r = move_updown(cur_r, cur_c, move);
        } 
	else if (move == 'A' || move == 'a' || move == 'D' || move == 'd') {
            cur_c=move_rightleft(cur_r, cur_c, move);
        } 
	else{
            slowPrint("請輸入正確移動指令！！", 4);
            continue;
        }
     
    } while (true); 
}


int psychologicaltest(){//回傳玩家選的角色 
	char option=0;
	
	cout << "\033[2J\033[1;1H"; 
	slowPrint("「第一題！對於戀愛小說，你喜歡哪種類型？」",2); 
	cout<<"a.當然是要甜甜的校園戀愛啊！"<<endl;
	cout<<"b.破鏡難圓的劇情非常好吃……"<<endl;
	cout<<"c.談什麼戀愛！自己一個人最棒了！"<<endl;
	while(cin>>option){
		
		if(option=='a'){
			cout << "\033[2J\033[1;1H";
			slowPrint("「第二題！你覺得人生是由什麼組成的呢？」",2); 
			cout<<"a.未知的意外。"<<endl;
			cout<<"b.過去的因果。"<<endl;
			cout<<"c.相同的事件。"<<endl;
			cout<<"d.無法掌控的命運。"<<endl;
			
			while(cin>>option){
				if(option=='a'||option=='b'||option=='c'||option=='d'){
				cout<<endl;
				cout<< "\033[33m"<<"恭喜你獲得 "<<result[option-97]<<" 稱號！"<< "\033[0m"<<endl;;
				cout<<endl;
				return (option-96);
				}
			
				else{slowPrint("請輸入正確選項！！",4); }
			}
		}
		
		else if(option=='b'){
			cout << "\033[2J\033[1;1H";
			slowPrint("「第二題！如果被丟到無人島上該怎麼辦呢？」",2); 
			cout<<"a.確保衛生！"<<endl;
			cout<<"b.尋找食物！"<<endl;
			
			while(cin>>option){
				if(option=='a'||option=='b'){
				cout<<endl;
				cout<< "\033[33m"<<"恭喜你獲得 "<<result[option-93]<<" 稱號！"<< "\033[0m"<<endl;;
				cout<<endl;
				return (option-92);
				}
				else{slowPrint("請輸入正確選項！！",4); }
			}
		}
		
		else if(option=='c'){
			cout << "\033[2J\033[1;1H";
			slowPrint("「第二題！既然是自己一個人的話，那你喜歡什麼樣的生活呢？」",2); 
			cout<<"a.刺激有趣的冒險！"<<endl;
			cout<<"b.開心快樂的玩耍！"<<endl;
			cout<<"c.平靜安穩的日常。"<<endl;
			
			while(cin>>option){
				if(option=='a'||option=='b'||option=='c'){
				cout<<endl;
				cout<< "\033[33m"<<"恭喜你獲得 "<<result[option-91]<<" 稱號！"<< "\033[0m"<<endl;;
				cout<<endl;
				return (option-90);
				}
				else{slowPrint("請輸入正確選項！！",4); }
			}
		}
		
		else{slowPrint("請輸入正確選項！！",4); }
		
	}
	
}

int test_text(){//回傳玩家選的角色 
	int character=0;
	char user_continue;
	do{
   		character=psychologicaltest();
   	
    	slowPrint("「你決定好這就是你的起司了嗎？還是要再來一遍？」",2);
    	cout<<"a.決定好啦！"<<endl;
		cout<<"b.還要再想想……"<<endl;
    	while(cin>>user_continue){
				if(user_continue=='a'){
					slowPrint("「好耶！那我們來揭曉答案吧！」",2); 
					break;
				}
				if(user_continue=='b'){
					slowPrint("「好，那我們再試一次吧！」",2); 
					break;
				}
				else{slowPrint("請輸入正確選項！！",4); }
		}
	}while(user_continue=='b');
	
	return character;
}



